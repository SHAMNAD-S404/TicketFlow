{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],  // Note the order change
    "types": ["node"] 
  },
  "include": [
    "src/**/*",
    "src/@types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}